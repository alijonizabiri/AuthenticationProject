@model Domain.Models.CategoryDto



<form asp-action="Edit" method="post">
    <input asp-for="CategoryId" type="hidden"/>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Category Name</label>
                <input asp-for="CategoryName" type="text" class="form-control " placeholder="" tabindex="1">
            </div>


            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Submit</button>
                    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancle</a>
                </center>
            </div>
        </div>
    </div>
</form>