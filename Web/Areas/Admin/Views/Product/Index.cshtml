@model List<Domain.Models.ProductCategoriesDto>


<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create</a>
    </div>
</div>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products Table</h4>
            <p class="card-description">
                Add class <code>.table-hover</code>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <td>Product Name</td>
                        <td>Product Quantity</td>
                        <td>Product Price</td>
                        <td>Category Name</td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.ProductName</td>
                            <td>@item.ProductQuantity</td>
                            <td>@item.ProductPrice</td>
                            <td>@item.CategoryName</td>

                            <td>
                                <a class="nav-link text-dark" asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId">
                                    Edit 
                                </a>
                                <a class="nav-link text-dark"  asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId">
                                    Delete 
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>